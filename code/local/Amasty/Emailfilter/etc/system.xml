<?xml version="1.0" encoding="UTF-8"?>
<config>
   <sections>
        <customer>
            <groups>
                <amemailfilter translate="E-mail Filters" module="amemailfilter">
                    <label>E-mail Filters</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>500</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <filters translate="label comment">
                            <label>Filters</label>
                            <comment>Filters like *@gmail.com, *@*.cn (* - wildcard). Separated by comma or new line.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </filters>
                        <forreg translate="label">
                            <label>Use filters for customer profile e-mail</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </forreg>
                        <forcheckout translate="label">
                            <label>Use filters for guest checkout e-mail</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </forcheckout>
                    </fields>
                </amemailfilter>
            </groups>
        </customer>
    </sections>
</config>
