<config>
    <tabs>
        <commerceextensions translate="label" module="hideproductprice">
            <label>CommerceExtensions</label>
            <sort_order>210</sort_order>
        </commerceextensions>
    </tabs>    
    <sections>
        <hideproductprice translate="label" module="hideproductprice">
            <label>Hide Product Price For Non-Registered Users</label>
            <tab>commerceextensions</tab>
            <frontend_type>text</frontend_type>
            <sort_order>90</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <hideproductprice translate="label">
                    <label>Hide Product Price For Non-Registered Users Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <displayed_text translate="label">
                            <label>Text to Display to Non-Registered Users (e.g. Please login to view pricing)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </displayed_text>
                        <allow_display_by_customer_group translate="label">
                            <label>Display By Customer Group (Enable/Disable)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </allow_display_by_customer_group>
                        <customer_group_to_display translate="label">
                            <label>Select Which Customer Groups Can View Pricing / Purchase Products</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>hideproductprice/config_source_listMode</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </customer_group_to_display>
                        <allow_display_by_category_ids translate="label">
                            <label>Display By Category IDs (Enable/Disable)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </allow_display_by_category_ids>
                        <category_ids_to_display translate="label">
                            <label>Select Which Category IDs Can View Pricing / Purchase Products e.g.(4,19,20)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category_ids_to_display>
                    </fields>
                </hideproductprice>
            </groups>
        </hideproductprice>
    </sections>
</config>
