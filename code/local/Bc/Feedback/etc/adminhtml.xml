<config>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <feedback>
                        <title>FeedBack Module</title>
                        <sort_order>10</sort_order>
                    </feedback>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <feedback translate="title" module="feedback">
                                        <title>Customer FeedBack</title>
                                        <sort_order>100</sort_order>
                                    </feedback>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
    <layout>
        <updates>
            <feedback>
                <file>feedback.xml</file>
            </feedback>
        </updates>
    </layout>

</config>
