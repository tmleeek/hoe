<config>
    <sections>
        <payment>
            <groups>
                <plationline translate="label,comment" module="plationline">
                    <label>Plati Online</label>
                    <comment><![CDATA[<br />
<div class="custom-options">
<div class="box">
<p class="grand-total"><br /><b>Plati Online Gateway</b></p>
<p><a href="http://www.plationline.ro/" target="_blank">plationline.ro</a></p>
</div>
</div>
]]></comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>804</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <debug_flag translate="label">
                            <label>Debug</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </debug_flag>
                        <test_flag translate="label">
                            <label>Test</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </test_flag>
                        <title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <login_id translate="label">
                            <label>Login ID</label>
                            <frontend_type>text</frontend_type>
                            <comment>Login ID is a case sensitive field</comment>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </login_id>
                        <plationline_gateway translate="label comment">
                            <label>Gateway URL</label>
                            <frontend_type>text</frontend_type>
                            <comment>Example: https://secure2.plationline.ro/trans30.asp</comment>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </plationline_gateway>
						<rsa_public_auth translate="label">
                            <label>RSA Public AUTH</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </rsa_public_auth>
                        <rsa_private_itsn translate="label">
                            <label>RSA Private ITSN</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </rsa_private_itsn>
						<iv_auth translate="label">
                            <label>IV Auth</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </iv_auth>
                        <iv_itsn translate="label">
                            <label>IV ITSN</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </iv_itsn>
                        <relay_method translate="label comment">
							<label>Relay Method</label>
                            <frontend_type>select</frontend_type>
                            <source_model>plationline/source_relayMethod</source_model>
                            <comment>Relay method to use.</comment>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </relay_method>
                        <payment_timeout translate="label comment">
							<label>Payment Timeout</label>
                            <frontend_type>text</frontend_type>
                            <comment>How long should we wait for the customer to complete the payment (minutes).</comment>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </payment_timeout>
                        <send_customer_sms translate="label">
                            <label>Send customer SMS notifications</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </send_customer_sms>
                    </fields>
                </plationline>
            </groups>
        </payment>
    </sections>
</config>
