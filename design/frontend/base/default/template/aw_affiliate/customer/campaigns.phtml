<div class="campaings fieldset">
    <h2 class="legend"><?php echo $this->__("Campaigns"); ?></h2>
    <?php if ($this->getCampaignCollection()->getSize()) : ?>
    <?php echo $this->getChildHtml('pager'); ?>
    <table class="data-table" id="my-campaigns-table">
        <col width="50%"/>
        <col width="10%"/>
        <col width="20%"/>
        <col width="20%"/>
        <thead>
        <tr>
            <th><?php echo $this->__('Name') ?></th>
            <th><?php echo $this->__('Rate') ?></th>
            <th><?php echo $this->__('Commission') ?></th>
            <th><?php echo $this->__('Action') ?></th>
        </tr>
        </thead>
        <tbody>
        <?php foreach ($this->getCampaignCollection() as $item) : ?>
        <tr>
            <td><?php echo $item->getName() ?></td>
            <td><?php echo $this->getRate($item) ?></td>
            <td><?php echo $this->getTotalAmountByCampaignId($item->getId());  ?></td>
            <td>
                <span class="nobr">
                    <a href="<?php echo $this->getUrlToCampaignView($item->getId()) ?>"><?php echo $this->__('View') ?></a>
                </span>
            </td>
        </tr>
        <?php endforeach; ?>
        </tbody>
    </table>
    <?php echo $this->getChildHtml('pager'); ?>
    <script type="text/javascript">decorateTable('my-campaigns-table')</script>
    <?php else: ?>
    <div class="no-campaign"><?php echo $this->__('Campaigns were not found'); ?></div>
    <?php endif; ?>
</div>
